<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:layout_marginBottom="8dp">

    <TextView android:id="@+id/textKata" android:textStyle="bold"
        android:textSize="18sp" android:text="Kata" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/textSukuKata"
        android:text="Suku kata" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/textDefinisi"
        android:text="Definisi" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:id="@+id/textTurunan"
        android:text="Turunan" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
