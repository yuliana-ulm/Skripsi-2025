<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Input judul/deskripsi suara -->
    <EditText
        android:id="@+id/editJudulSuara"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan judul atau deskripsi suara"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tombol Rekam Suara -->
    <Button
        android:id="@+id/btnRekamSuara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekam Suara"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editJudulSuara"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tombol Pilih File Suara -->
    <Button
        android:id="@+id/btnPilihSuara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih File Suara"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnRekamSuara"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Teks untuk menampilkan nama file atau status -->
    <TextView
        android:id="@+id/tvStatusSuara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum ada suara dipilih"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnPilihSuara"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tombol Upload Suara -->
    <Button
        android:id="@+id/btnUploadSuara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload ke Firebase"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatusSuara"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
