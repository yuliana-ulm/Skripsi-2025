<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.SimpanKamusLocal">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etKata"
                android:hint="Kata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etSukuKata"
                android:hint="Suku Kata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etGambar"
                android:hint="Nama File Gambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Definisi Umum -->
            <TextView
                android:text="Definisi Umum"
                android:paddingTop="12dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etDefinisi"
                android:hint="Definisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etKelasKata"
                android:hint="Kelas Kata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etContohBanjar"
                android:hint="Contoh Kalimat (Banjar)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etContohIndo"
                android:hint="Contoh Kalimat (Indonesia)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etSuara"
                android:hint="Nama File Suara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Header Turunan -->
            <TextView android:text="Turunan Kata" android:paddingTop="12dp"
                android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layoutTurunanContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnTambahTurunan"
                android:text="Tambah Turunan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <!-- Tombol Simpan -->
            <Button
                android:id="@+id/btnSimpan"
                android:text="Simpan ke JSON"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>